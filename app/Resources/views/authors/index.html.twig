<table border="0" style="width: 100%">
    <tr align="center">
        <td colspan="2">
            <div>
                {% include ':default:header.html.twig' %}
            </div>
        </td>
    </tr>
    <tr>
        <td style="width: 20%" align="left" valign="top">
            {% if username %}
                Welcome {{ username }}!
                {% include 'default/user-panel.html.twig' %}
            {% endif %}
        </td>
        <td style="width: 80%" align="center">
            {{ form_start(form) }}
            {{ form_row(form) }}
            {{ form_end(form) }}
        </td>
    </tr>
</table>