<table border="0" style="width: 100%">
    <tr align="center">
        <td colspan="2">
            <div>
                {% include ':default:header.html.twig' %}
            </div>
        </td>
    </tr>
    <tr>
        <td style="width: 20%" align="left" valign="top">
            {% if username %}
                Welcome {{ username }}!
                {% include 'default/user-panel.html.twig' %}
            {% endif %}
        </td>
        <td style="width: 80%" align="center">
            <div align="center">
                {% for key,value in newsList %}
                    <div>
                        <b>
                            {{ value.title }}
                        </b>
                    </div>
                    <table border="2" style="width:20%">
                        <tr>
                            <td>
                                {{ value.text }}
                            </td>
                        </tr>
                    </table>
                    <div>
                        Author: <a href="/authors/{{ value.author }}">{{ value.author }}</a>
                        Date: {{ value.date|date('d-m-Y') }}
                        {% for key,vrednost in value.comments %}
                            <table border="0" style="width:20%">
                                <tr>
                                    <td>{{ vrednost.author }}:</td>
                                    <td>{{ vrednost.text }}</td>
                                    <td>{{ vrednost.date|date('d:m:Y H:i:s') }}</td>
                                </tr>
                            </table>
                        {% endfor %}
                    </div>
                {% endfor %}
                <div>
                    Comment:
                </div>
                {{ form_start(form) }}
                {{ form_errors(form) }}

                <div>
                    {{ form_label(form.author) }}
                    {{ form_errors(form.author) }}
                    {{ form_widget(form.author) }}
                </div>

                <div>
                    {{ form_label(form.text) }}
                    {{ form_errors(form.text) }}
                    {{ form_widget(form.text) }}
                </div>

                <div>
                    {{ form_widget(form.post , { 'label': 'Post' }) }}
                </div>
                {{ form_end(form) }}
            </div>
        </td>
    </tr>
</table>