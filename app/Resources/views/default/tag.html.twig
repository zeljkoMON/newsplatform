<center>
    {% for key,value in tagslist %}
        <div>
            <b>
                <a href="/news/{{ value.id }}">{{ value.title }}</a>
            </b>
        </div>
        <table border="2" style="width:20%">
            <tr>
                <td>
                    {{ value.text }}
                </td>
            </tr>
        </table>
        <div>
            Author: <a href="/authors/{{ value.author }}">{{ value.author }}</a> Date: {{ value.date|date('d-m-Y') }}
            <div>
                Comments:
            </div>
            {% for key,vrednost in value.comments %}
                <table border="0" style="width:15%">
                    <tr>
                        <td>{{ vrednost.author }}:</td>
                        <td>{{ vrednost.text }}</td>
                    </tr>
                </table>
            {% endfor %}
        </div>
    {% endfor %}
</center>